<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>商品一覧(全<%= @item.all.count %>件)</h3>
    </div>
  </div>
  <div class="row">
    <% @item.each do |item| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image %><br>
        <% end %>
        <%= item.name %><br>
        <%= item.non_taxed_price %><br>
      </div>
    <% end %>
    <%= paginate @item %>
    </div>
  </div>
</div>