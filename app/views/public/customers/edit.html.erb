<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>会員情報編集</h3>
    </div>
    <div class="col-md-10 py-3">
      <%= form_with model: @customer, url: customers_path, local:true do |f| %>
        <h6>氏名</h6>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
        <h6>フリガナ</h6>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
        <h6>郵便番号</h6>
        <%= f.text_field :postal_code %>
        <h6>住所</h6>
        <%= f.text_field :address %>
        <h6>電話番号</h6>
        <%= f.telephone_field :telephone_number %>
        <h6>メールアドレス</h6>
        <%= f.email_field :email %><br>
        <%= f.submit '編集内容を保存', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <%= link_to "退会する", class: "btn btn-danger" %>
    </div>
  </div>
</div>