<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>マイページ</h2>
      <h5>登録情報</h5>
      <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
      <table border="1">
        <tr>
          <th>氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
      </table>

      <h5>配送先</h5><%= link_to "一覧を見る", class: "btn btn-primary" %>
      <h5>注文履歴</h5><%= link_to "一覧を見る", class: "btn btn-primary" %>
    </div>
  </div>
</div>