<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>注文情報確認</h3>
      <table border="1">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @sum = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_non_taxed_price %></td>
            <td><%= cart_item.amount %></td>
            <td>
              <%= cart_item.item.add_tax_non_taxed_price * cart_item.amount %>
              <% @sum += cart_item.item.add_tax_non_taxed_price * cart_item.amount %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2 py-5">
      <table border="1">
        <tr>
          <th>送料</th><td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td>
            <%= @sum %>
          </td>
        </tr>
        <tr>
          <th>請求金額</th><td><%= @order.shipping_cost + @sum %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 py-2">
      <span>支払方法</span>
      <%= @order.payment_method_i18n %><br>
      <span>お届け先</span>
      〒<%= @order.post_code %>
      <%= @order.address %>
      <%= @order.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-4 py-2">
      <%= form_with model: @order, url: orders_path, local:true do |f| %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :post_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :total_payment, :value => @sum %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>