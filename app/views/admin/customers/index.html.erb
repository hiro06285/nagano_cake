<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>会員一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to (admin_customer_path(customer.id)) do %>
                <%= customer.last_name %><%=customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.status == true %>
                <%= "有効" %>
              <% else %>
                <%= "退会" %>
              <% end %>
            </td>
          </tr>
          <% end %>
          <%= paginate @customer %>
        </tbody>
      </table>
    </div>
  </div>
</div>