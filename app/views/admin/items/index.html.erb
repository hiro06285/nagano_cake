<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @item.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to (admin_item_path(item.id)) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.non_taxed_price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.sales_status == true %>
                <%= "販売中" %>
              <% else %>
                <%= "販売停止中" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>