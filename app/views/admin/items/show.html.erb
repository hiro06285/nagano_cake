<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>商品詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "noimage.jpg", class: "img-fluid" %>
    </div>
    <div class="col-md-7 offset-md-1">
      <table>
        <tr>
          <th>商品名</th><td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th><td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th><td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込み価格<br>(税抜価格)</th><td><%= @item.add_tax_non_taxed_price.to_s(:delimited) %>(<%= @item.non_taxed_price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.sales_status == true %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
          </td>
        </tr>
        <tr><td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-sm btn-success" %></td></tr>
      </table>
    </div>
  </div>
</div>