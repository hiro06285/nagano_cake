<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-1">
      <h3>商品編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
        <h6>商品画像</h6>
        <%=f.attachment_field :image %>
        <h6>商品名</h6>
        <%= f.text_field :name %>
        <h6>商品説明</h6>
        <%= f.text_area :introduction %>
        <h6>ジャンル</h6>
        <%= f.collection_select :genre_id, @genre, :id, :name %>
        <h6>税抜価格</h6>
        <%= f.text_field :non_taxed_price %>
        <h6>販売ステータス</h6>
        <%= f.radio_button :sales_status, "true" %>
        <%= f.label :sales_status, '販売中', value: true %>
        <%= f.radio_button :sales_status, "false" %>
        <%= f.label :sales_status, '販売停止中', value: false %><br>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>